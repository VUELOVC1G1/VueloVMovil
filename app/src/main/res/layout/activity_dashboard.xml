<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity"
    android:background="#607d8b"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="690dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="PROCESO DE RESERVA"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="90dp"
            android:text="PRIMERA CLASE"
            android:textColor="@color/white" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"

            >

            <Button
                android:id="@+id/btn1"
                android:layout_marginLeft="180dp"
                android:backgroundTint="@color/white"
                android:text="1"
                android:textColor="@color/black">

            </Button>

            <Button
                android:id="@+id/btn2"
                android:backgroundTint="@color/white"
                android:text="2"
                android:textColor="@color/black"></Button>


        </GridLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="140dp"
            android:text="CLASE BUSSINES"
            android:textColor="@color/white" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="160dp"

            >

            <Button
                android:id="@+id/btn3"
                android:layout_marginLeft="118dp"
                android:backgroundTint="@color/white"
                android:text="3"
                android:textColor="@color/black">

            </Button>

            <Button
                android:id="@+id/btn4"
                android:backgroundTint="@color/white"
                android:text="4"
                android:textColor="@color/black"></Button>

            <Button
                android:id="@+id/btn5"
                android:backgroundTint="@color/white"
                android:text="5"
                android:textColor="@color/black"></Button>


        </GridLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="210dp"
            android:text="CLASE ECONOMICA"
            android:textColor="@color/white" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="225dp"


            >

            <Button
                android:id="@+id/btn6"
                android:layout_marginLeft="180dp"
                android:backgroundTint="@color/white"
                android:text="6"
                android:textColor="@color/black">

            </Button>

            <Button
                android:id="@+id/btn7"
                android:backgroundTint="@color/white"
                android:text="7"
                android:textColor="@color/black"></Button>


        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="265dp"


            >

            <Button
                android:id="@+id/btn8"
                android:layout_marginLeft="180dp"
                android:backgroundTint="@color/white"
                android:text="8"
                android:textColor="@color/black">

            </Button>

            <Button
                android:id="@+id/btn9"
                android:backgroundTint="@color/white"
                android:text="9"
                android:textColor="@color/black"></Button>


        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="307dp"


            >

            <Button
                android:id="@+id/btn10"
                android:layout_marginLeft="180dp"
                android:backgroundTint="@color/white"
                android:text="10"
                android:textColor="@color/black">

            </Button>

            <Button
                android:id="@+id/btn11"
                android:backgroundTint="@color/white"
                android:text="11"
                android:textColor="@color/black"></Button>


        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="348dp"


            >

            <Button
                android:id="@+id/btn12"
                android:layout_marginLeft="180dp"
                android:backgroundTint="@color/white"
                android:text="12"
                android:textColor="@color/black">

            </Button>

            <Button
                android:id="@+id/btn13"
                android:backgroundTint="@color/white"
                android:text="13"
                android:textColor="@color/black"></Button>


        </GridLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="450dp"
            android:text="Ingreso  Maletas"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edMaletas"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_back_while10_5"
            android:hint="Peso KG"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#CCFFFFFF"
            android:textSize="16sp" />


        <Button
            android:id="@+id/reservaBtn"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="605dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/notifications"
            android:text="Reservar Vuelo"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="520dp"
            android:text="Escoga Metodo Pago"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/uno"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="510dp"
            android:checked="false"
            android:text="Diners Club"
            android:textColor="@color/white" />


    </RelativeLayout>

</RelativeLayout>