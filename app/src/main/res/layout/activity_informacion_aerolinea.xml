<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformacionAerolineaActivity"
    android:background="#fb8c00">


    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INFORMACION AEROLINEA"
            android:textSize="28dp"
            android:textColor="#000"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conoce Nuestra Historia"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="#272727"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="130dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:padding="10dp">

                <TextView
                    android:id="@+id/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inicios"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="La Creacion del proyecto se dio por parte de un grupo  de \n estudiantes del Instituto Tecnologico Superior del Azuay a partir del 2021."
                    android:layout_below="@id/t1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/black"/>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:padding="10dp">

                <TextView
                    android:id="@+id/t2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10sp"
                    android:text="Sostenibilidad"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Somos un actor que promueve el desarrollo social, medio ambiental y economico en la busqueda de soluciones colectivas."
                    android:layout_below="@id/t2"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/black"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeeeee"
                android:padding="10dp">

                <TextView
                    android:id="@+id/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fundadores App Movil"
                    android:textSize="30sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" -CHRISTIAN EDUARDO MENDIETA TENESACA
                      \n - CRISTIAN FABRICIO OJEDA OJEDA
                      \n - EMILIA ANAHI CRESPO FAJARDO
                      \n - CARLOS GEOVANNY LUNA YUNGA
                      \n - MICHELLE CRISTINA CARCHI
                      \n - KEVIN PAUL GUEVARA CORTEZ
                      \n - DANNES DARIO MAURAD MUY
                      \n - JEFFERSON ISMAEL CONDO  CEPEDA
                      \n - JOSE HERNAN CEDEÃ‘O GARCIA
                      \n\n Derechos Reservados &#169; Vuela V, Inc."
                    android:layout_below="@id/t3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/logoista"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>




</RelativeLayout>